<h1>Eat-Da-Burger!</h1>

<h2>Burger List</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
<p>{{burgername}}</p>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">burger Name:</label>
    <input type="text" id="bur" name="burgername">
  </div>


  <button type="submit">Add burger</button>
</form>
