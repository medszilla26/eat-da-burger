<div class="container">
  <div class="row">
    <div class="col title"><h1>Eat-Da-Burger!</h1></div>
  </div>
  <div class="row">
    <div class="col"><h3>Burger Menu</h3>
    <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
    </ul>
  </div>
    <div class="col"><img src="/assets/img/burger.png" width="250px" height="250px" alt="cartoon-burger"></div>
    <div class="col"><h3>Burgers Devoured</h3>
    <ul>
        {{#each burgers}}
          {{#if devoured}}
            <p>{{burgername}}</p>
          {{/if}}
        {{/each}}
    </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <form class="create-form">
        <div class="form-group">
          <label for="bur"></label>
          <input type="text" id="bur" name="burgername" placeholder="add a burger">
        </div>
<button type="submit" class="btn btn-success" >Submit</button>
      </form>
    </div>
  </div>
</div>